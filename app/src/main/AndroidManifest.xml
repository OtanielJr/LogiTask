            android:exported="true"
            android:screenOrientation="locked"
            tools:ignore="DiscouragedApi">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".RegisterPage"
            android:screenOrientation="locked"
            tools:ignore="DiscouragedApi">


        </activity>

        <activity android:name=".HomeActivity"
            android:screenOrientation="locked"
            android:exported="true"
            tools:ignore="DiscouragedApi">

        <intent-filter>

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        </activity>

        <activity
            android:name=".CreateTeam"
            android:exported="true"
            android:screenOrientation="locked"
            tools:ignore="DiscouragedApi">

        </activity>
        <activity
            android:name=".ManageTeam"
            android:screenOrientation="locked"
            tools:ignore="DiscouragedApi">

        </activity>

        <activity
            android:name=".ManageColaborators"
            android:screenOrientation="locked"
            tools:ignore="DiscouragedApi">

        </activity>

        <activity
            android:name=".UserProfile"
            android:screenOrientation="locked"
            tools:ignore="DiscouragedApi">

        </activity>

        <activity
            android:name=".CreateUser1"
            android:screenOrientation="locked"
            tools:ignore="DiscouragedApi">

        </activity>

    </application>
</manifest>